<% layout('layouts/boilerplate')%>

  <div class="row">
    <h1 class="text-center">Edit Location</h1>
    <div class="col-6 offset-3">
      <!-- use methodOverride to allow for put request -->
      <form action="/locations/<%=location._id%>?_method=PUT" method="POST" novalidate class="validated-form">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" id="title" name="location[title]" value="<%=location.title %>"
            required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" id="location" name="location[location]"
            value="<%=location.location %>" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="image">Image Url</label>
          <input class="form-control" type="text" id="image" name="location[image]" value="<%=location.image %>"
            required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Location Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
              aria-describedby="price-label" name="location[price]" value="<%=location.price %>" required>\<div
              class="valid-feedback">
              Looks good!
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" type="text" id="description" name="location[description]"
            required><%= location.description%></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <button class="btn btn-info">Update Location</button>
        </div>
      </form>
      <a href="/locations/<%= location._id%>">Back To Location</a>

    </div>
  </div>