<% layout('layouts/boilerplate')%>

  <div class="row">
    <h1 class="text-center">Edit Location</h1>
    <div class="col-md-6 offset-md-3 mb-3">
      <!-- use methodOverride to allow for put request -->
      <form action="/locations/<%=location._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" id="title" name="location[title]" value="<%=location.title %>"
            required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" id="location" name="location[location]"
            value="<%=location.location %>" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" type="text" id="description" name="location[description]"
            required><%= location.description%></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <!-- upload images -->
        <div class="mb-3">
          <div class="form-file custom-file">
              <input type="file" class="form-file-input" id="image" name="image" multiple>
              <label class="form-file-label" for="image">
                  <span class="form-file-text custom-file-label">Add image(s)</span>
                  <span class="form-file-button">Browse</span>
              </label>
          </div>
        </div>
        <!-- delete image -->
        <div class="mb-3">
          <% location.images.forEach(function(img, i) {  %>
          <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
          <div class="form-check-inline">
              <!-- value added to deleteImages[] when checkbox selected -->
              <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
          </div>
          <label for="image-<%=i%>">Delete?</label>
          <% })%>
        </div>

        <div class="mb-3">
          <button class="btn btn-info">Update Location</button>
        </div>
      </form>
      <a href="/locations/<%= location._id%>">Back To Location</a>
    </div>
  </div>